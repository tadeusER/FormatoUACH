%---------------------------------------------------------------
% HIGHLIGHT BOX ENVIRONMENTS - SIN CAMBIOS DE TAMAÑO
%---------------------------------------------------------------

\newcommand{\keyfindings}[1]{
  \vspace{0.2cm}
  \begin{tcolorbox}[
    colback=primaryColor!15,
    colframe=primaryColor,
    arc=3pt,
    boxrule=1.5pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
    \textbf{\color{primaryColor}Key Finding:} \color{darkText}#1
  \end{tcolorbox}
  \vspace{0.2cm}
}

\newcommand{\importantnote}[1]{
  \vspace{0.2cm}
  \begin{tcolorbox}[
    colback=accentOrange!10,
    colframe=accentOrange!60,
    arc=3pt,
    boxrule=1pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
    \textbf{\color{accentOrange}Note:} \color{darkText}#1
  \end{tcolorbox}
  \vspace{0.2cm}
}

\newcommand{\successbox}[1]{
  \vspace{0.2cm}
  \begin{tcolorbox}[
    colback=statusSuccess!10,
    colframe=statusSuccess!60,
    arc=3pt,
    boxrule=1pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
    \textbf{\color{statusSuccess}Success:} \color{darkText}#1
  \end{tcolorbox}
  \vspace{0.2cm}
}

\newcommand{\alertbox}[1]{
  \vspace{0.2cm}
  \begin{tcolorbox}[
    colback=statusDanger!10,
    colframe=statusDanger!60,
    arc=3pt,
    boxrule=1.5pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
    \textbf{\color{statusDanger}Alert:} \color{darkText}#1
  \end{tcolorbox}
  \vspace{0.2cm}
}

\newcommand{\infobox}[1]{
  \vspace{0.2cm}
  \begin{tcolorbox}[
    colback=accentBlue!10,
    colframe=accentBlue!60,
    arc=3pt,
    boxrule=1pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
    \textbf{\color{accentBlue}Info:} \color{darkText}#1
  \end{tcolorbox}
  \vspace{0.2cm}
}

%---------------------------------------------------------------
% STATUS BADGES
%---------------------------------------------------------------

\newcommand{\statusbadge}[2]{
  \tikz[baseline=(badge.base)]{
    \node[
      circle,
      fill=#1,
      text=white,
      inner sep=0.3cm,
      font=\small\bfseries
    ] (badge) {#2};
  }
}

\newcommand{\statusgreen}[1]{\statusbadge{statusSuccess}{#1}}
\newcommand{\statusyellow}[1]{\statusbadge{statusWarning}{#1}}
\newcommand{\statusred}[1]{\statusbadge{statusDanger}{#1}}
\newcommand{\statusblue}[1]{\statusbadge{statusInfo}{#1}}

%---------------------------------------------------------------
% PROGRESS BAR
%---------------------------------------------------------------

\newcommand{\progressbar}[3]{
  \vspace{0.1cm}
  \noindent
  \textbf{#2}\\
  \tikz[baseline]{
    \draw[lightGray, line width=0.25cm] (0,0) -- (3,0);
    \draw[#3, line width=0.25cm] (0,0) -- ({3*#1/100},0);
    \node[right, inner sep=2pt] at (3.1,0) {\small\bfseries#1\%};
  }
  \vspace{0.05cm}
}

\newcommand{\progressbardefault}[2]{\progressbar{#1}{#2}{primaryColor}}

%---------------------------------------------------------------
% MILESTONE TIMELINE
%---------------------------------------------------------------

\newenvironment{timeline}{
  \begin{tcolorbox}[
    colback=white,
    colframe=primaryColor!40,
    arc=3pt,
    boxrule=1pt,
    left=0.4cm,
    right=0.4cm,
    top=0.2cm,
    bottom=0.2cm
  ]
    \small
}{
  \end{tcolorbox}
}

\newcommand{\milestone}[3]{
  \vspace{0.1cm}
  \noindent
  \textbf{\small #1} \hfill
  \ifx#3completed
    \statusgreen{Completed}
  \else\ifx#3in-progress
    \statusblue{In Progress}
  \else
    \statusyellow{Planned}
  \fi\fi\\
  \small #2\\
}

%---------------------------------------------------------------
% METRICS AND KPI DISPLAY
%---------------------------------------------------------------

\newcommand{\metricpair}[4]{
  \begin{minipage}[c]{0.48\linewidth}
    \begin{tcolorbox}[
      colback=lightGray!50,
      colframe=primaryColor!30,
      arc=2pt,
      boxrule=0.5pt,
      left=0.25cm,
      right=0.25cm,
      top=0.2cm,
      bottom=0.2cm,
      halign=left
    ]
      \small\color{mediumText}#1\\
      \normalsize\bfseries\color{primaryColor}#2\\
      \small #3 \textcolor{accentGreen}{#4}
    \end{tcolorbox}
  \end{minipage}
}

%---------------------------------------------------------------
% BULLET POINT STYLES WITH PROPER SYMBOLS
%---------------------------------------------------------------

\newcommand{\checkmarkicon}{{\color{statusSuccess}\checkmark}}
\newcommand{\xmark}{{\color{statusDanger}$\times$}}
\newcommand{\pending}{{\color{statusWarning}$\circ$}}
\newcommand{\arrow}{{\color{primaryColor}$\rightarrow$}}

%---------------------------------------------------------------
% CUSTOM LISTS WITH ICONS
%---------------------------------------------------------------

\newenvironment{checklist}{
  \begin{enumerate}[
    label={\checkmarkicon},
    left=0pt,
    labelsep=0.3cm
  ]
}{
  \end{enumerate}
}

%---------------------------------------------------------------
% HIGHLIGHT TEXT
%---------------------------------------------------------------

\newcommand{\highlight}[1]{
  \colorbox{primaryColor!15}{\color{primaryColor}\bfseries #1}
}

\newcommand{\highlightred}[1]{
  \colorbox{accentRed!20}{\color{accentRed}\bfseries #1}
}

\newcommand{\highlightgreen}[1]{
  \colorbox{accentGreen!20}{\color{accentGreen}\bfseries #1}
}

