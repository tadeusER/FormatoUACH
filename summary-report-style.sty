  \begin{tcolorbox}[
    colback=accentOrange!10,
    colframe=accentOrange!70,
    arc=4pt,
    boxrule=1pt,
    left=0.5cm,
    right=0.5cm,
    top=0.3cm,
    bottom=0.3cm
  ]
