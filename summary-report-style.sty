  \begin{tcolorbox}[
    colback=primaryColor!20,
    colframe=primaryColor,
    arc=4pt,
    boxrule=1.5pt,
    left=0.5cm,
    right=0.5cm,
    top=0.4cm,
    bottom=0.4cm
  ]
    \textbf{\color{primaryColor}Key Finding:} #1
  \end{tcolorbox}
  \vspace{0.2cm}
}

\newcommand{\importantnote}[1]{
